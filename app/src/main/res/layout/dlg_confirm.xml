<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content" android:layout_height="wrap_content">

    
    <LinearLayout 
	    android:layout_marginTop="26dp"
	    android:id="@+id/wrap_dialog_confirm"
	    android:layout_width="305dp"
	    android:layout_height="wrap_content"
	    android:background="@drawable/bg_round_white8"
	    android:orientation="vertical" 
	    android:gravity="center_horizontal">
	
	    <TextView
	        android:id="@+id/lbl_pop_title"
	        android:layout_width="match_parent"
	        android:layout_height="46dp"
	        android:layout_gravity="center"
	        android:layout_marginTop="20dp"
	        android:gravity="center"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        android:text="@string/lbl_notify"
	        android:textColor="#8ac5c3"
	        android:textSize="15dp" />
	
	    <ImageView
	        android:layout_width="100dp"
	        android:layout_height="6px"
	        android:background="#dddddd"
	        android:contentDescription="@string/desc_decoration"
	        android:scaleType="fitXY" />
	
	    <TextView
	        android:id="@+id/lbl_pop_msg"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:text=""
	        android:gravity="center"
	        android:minHeight="106dp"
	        android:padding="20dp"
	        android:textColor="#333333"
	        android:textSize="13dp" />
	
	    <ListView
	        android:id="@+id/list_dlg_radio"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@null"
	        android:choiceMode="singleChoice"
	        android:visibility="gone" />
	
	    <ScrollView
	        android:id="@+id/scrollView_radio"
	        android:layout_width="match_parent"
	        android:layout_height="250dp"
	        android:visibility="gone" >
	
	        <RadioGroup
	            android:id="@+id/radioGroup_dlg"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:minWidth="300dp"
	            android:visibility="gone" />
	    </ScrollView>
	
	    <ImageView
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#dddddd"
	        android:contentDescription="@string/desc_decoration"
	        android:scaleType="fitXY" />
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="47dp"
	        android:orientation="horizontal" >
			<Button
	            android:id="@+id/btn_pop_cancel"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:background="#00000000"
	            android:gravity="center"
	            android:text="@string/btn_cancel"
	            android:textColor="#474747"
	            android:visibility="gone" />
	        <ImageView
	            android:id="@+id/line_dlg_devide"
	            android:layout_width="1dp"
	            android:layout_height="match_parent"
	            android:background="#dddddd"
	            android:contentDescription="@string/desc_decoration"
	            android:scaleType="fitXY"
	            android:visibility="gone" />
	        
			<Button
	            android:id="@+id/btn_pop_action"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:background="#00000000"
	            android:gravity="center"
	            android:text="@string/btn_comfirm"
	            android:textColor="#474747"
	            android:visibility="gone" />
	        	
	        
	        
	    </LinearLayout>
	
	</LinearLayout>
    <ImageView android:layout_width="52dp" android:layout_height="52dp" android:layout_gravity="center_horizontal"
        android:src="@drawable/popup_ico_notice"/>
    
    
</FrameLayout>
